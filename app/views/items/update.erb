<form method="POST" action="/items/<%= @item.id %>">
<input type="hidden" id="hidden" name="_method" value="patch"> 
<p><label for="name">Item Name</label>
<input type="text" name="name" id="name" required="true" value="<%= @item.name %>"></p>
<p><label for="brand">Item Brand</label>
<input type="text" name="brand" id="brand" required="true" value="<%= @item.brand %>"></p>
<p><label for="size">Size</label>
<input type="text" name="size" id="size" required="true" value="<%= @item.size %>"></p>
<p><label for="cost">Item Cost ($)</label>
<input type="number" step="0.01" name="cost" id="cost" required="true" value="<%= @item.cost %>"></p>
<p><label for="purchased_from">Purchased From</label>
<input type="text" name="purchased_from" id="purchased_from" required="true" value="<%= @item.purchased_from %>"></p>
<p><label for="purchase_date">Purchase Date</label>
<input type="date" name="purchase_date" id="purchase_date" required="true" value="<%= @item.purchase_date.to_date.strftime('%Y-%m-%d') %>"></p>
<input type="submit" value="Update Item">
</form>
<form method="POST" action="/items/<%= @item.id %>">
<input type="hidden" name="_method" value="delete">
<input type="submit" value="Delete Item">
</form>