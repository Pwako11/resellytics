<% if !@items.empty?%>
<div class="nav">
    <h2>Inventory (Total: $<%= sprintf("%.2f", total("items")) %>)</h2>
    <a href="/logout">Log Out</a>
    <a href="/expenses">Expenses</a>
    <a href="/items">Inventory</a>
    <a href="/dashboard">Dashboard</a>
</div>

<p><a class="options" href="/items/new">Add Item</a></p>
<div class="container">
    <% @items.each do |item| %>
        <a href="/items/<%= item.id %>">
            <div class="item">
                <h2><%= item.name %></h2>
                <p><h3><%= item.brand %></h3></p>
                <p>Size <%= item.size %></p>
                <p>Cost: $<%= sprintf("%.2f",item.cost) %></p>
            </div>
        </a>
    <% end %>
</div>

<% else %>
<div class="nav">
    <h2>Inventory (Total: $0)</h2>
    <a href="/logout">Log Out</a>
    <a href="/expenses">Expenses</a>
    <a href="/dashboard">Dashboard</a>
</div>
<p>No items added, please <a href="/items/new">click here</a> to add an item.</p>
<% end %>