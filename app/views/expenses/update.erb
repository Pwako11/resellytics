<div class="nav">
    <h2><%= @expense.name %></h2>
    <a href="/logout">Log Out</a>
    <a href="/expenses">Expenses</a>
    <a href="/items">Inventory</a>
    <a href="/dashboard">Dashboard</a>
</div>
<form method="POST" action="/expenses/<%= @expense.id %>">
<input type="hidden" id="hidden" name="_method" value="patch"> 
<p><label for="name">Expense Name</label>
<input type="text" name="name" id="name" required="true" value="<%= @expense.name %>"></p>
<p><label for="brand">Category</label>
<input type="text" name="category" id="category" required="true" value="<%= @expense.category %>"></p>
<p><label for="cost">Expense Cost ($)</label>
<input type="number" step="0.01" name="cost" id="cost" required="true" value="<%= @expense.cost %>"></p>
<p><label for="purchased_from">Purchased From</label>
<input type="text" name="purchased_from" id="purchased_from" required="true" value="<%= @expense.purchased_from %>"></p>
<p><label for="purchase_date">Purchase Date</label>
<input type="date" name="purchase_date" id="purchase_date" required="true" value="<%= @expense.purchase_date.to_date.strftime('%Y-%m-%d') %>"></p>
<input type="submit" value="Update Expense">
</form>
<form method="POST" action="/expenses/<%= @expense.id %>">
<input type="hidden" name="_method" value="delete">
<input type="submit" value="Delete Expense">
</form>